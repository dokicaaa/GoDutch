<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="FirstScreen" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#EE8C31</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#FFFFFF</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="31">#EE8C31</item>
        <!-- Customize your theme here. -->
        <item name="android:windowAnimationStyle">@style/PopupAnimation</item>
    </style>

    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="colorControlNormal">#000000</item>
    </style>


    <style name="PopupAnimation">
        <item name="android:windowEnterAnimation">@anim/popup_animation</item>
        <item name="android:windowExitAnimation">@anim/pop_close_anime</item>
    </style>

    <style name="SeekBarWithoutSteps" parent="Base.Widget.AppCompat.SeekBar.Discrete">
        <item name="tickMark">@null</item>
    </style>
</resources>